<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="6dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_profile_image"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/placeholder"
        app:civ_border_width="0.5dp"
        app:civ_border_color="@color/user_photo_border"/>

    <TextView
        android:id="@+id/tv_username_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:text="username_name"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:layout_below="@+id/tv_username_up"
        android:text="Location"/>

    <ImageView
        android:id="@+id/iv_photo_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:contentDescription="instagram image"
        android:src="@drawable/placeholder"
        android:layout_below="@+id/iv_profile_image"
        android:paddingTop="40dp"/>

    <ImageView
        android:id="@+id/iv_like_hearth"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:paddingTop="5dp"
        android:layout_below="@id/iv_photo_content"
        android:src="@drawable/ic_like_icon_grey"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_likes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="Likes: "
        android:layout_below="@id/iv_photo_content"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:maxLines="1"
        android:textSize="15sp"
        android:textColor="@color/user_name"
        android:padding="1dp"
        android:text="FULL_NAME"
        android:layout_below="@id/tv_likes_text"
        android:textStyle="bold"/>



    <TextView
        android:id="@+id/tv_caption_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_username"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:padding="1dp"
        android:text="CAPTION"/>


    <TextView
        android:id="@+id/tv_time_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_caption_text"
        android:text="BEFORE 20 MIN"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textSize="8dp"
        android:padding="1dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/tv_time_created"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"/>

</RelativeLayout>